@use "sass:map";
@use "sass:color";

/************************************************************/
/**************************PLACEHOLDER**************************/
/************************************************************/
%adminPage {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafbfc;

  &__form {
    background: #fff;
    padding: 32px 28px;
    border-radius: 12px;
    box-shadow: 0 4px 24px #0001;
    display: flex;
    flex-direction: column;
    gap: 18px;
    min-width: 320px;
  }
  label {
    display: flex;
    flex-direction: column;
    font-weight: 500;
    font-size: 15px;
    gap: 6px;
  }
  input {
    padding: 8px 12px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 16px;
  }
  &__submit {
    background: #c0392b;
    color: #fff;
